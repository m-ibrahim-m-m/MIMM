import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.linear_model import LinearRegression
df = pd.read_csv('D:/AI Course/Salary_Data.csv')
df
df.info()
df.describe()
df.hist( bins = 50 , figsize = (15,5) )
plt.show()
sns.scatterplot(data = df ,x = 'YearsExperience',y = 'Salary')
plt.title('Scatter Plot')
plt.show()
sns.pairplot(df)
plt.tight_layout()
plt.show()
Model = LinearRegression()
isinstance(Model,LinearRegression) # Just for check
x = df['YearsExperience']
x = np.array(x).reshape(-1,1)
y = df['Salary']
Model.fit(x ,y )
b = Model.intercept_
a = Model.coef_
y_perdict = Model.predict(x)
from sklearn.metrics import mean_squared_error,mean_absolute_percentage_error,mean_absolute_error
mean_squared_error(y_perdict,y)
mean_absolute_error(y_perdict,y)
mean_absolute_percentage_error(y_perdict,y)*100
